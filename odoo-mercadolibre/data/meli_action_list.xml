<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="meli_action_products" model="meli.action.list">
            <field name="name">Products</field>
            <field name="model">product.template</field>
            <field name="argument">products</field>
            <field name="automatic">True</field>
            <field name="export">True</field>
            <field name="importv">True</field>
        </record>

        <record id="meli_action_categories" model="meli.action.list">
            <field name="name">Categories</field>
            <field name="model">product.public.category</field>
            <field name="argument">categories</field>
            <field name="automatic">False</field>
            <field name="export">False</field>
            <field name="importv">True</field>
        </record>

        <record id="meli_action_customers" model="meli.action.list">
            <field name="name">Customers</field>
            <field name="model">res.partner</field>
            <field name="argument">customers</field>
            <field name="automatic">False</field>
            <field name="export">False</field>
            <field name="importv">False</field>
        </record>

        <record id="meli_action_orders" model="meli.action.list">
            <field name="name">Orders</field>
            <field name="model">sale.order</field>
            <field name="argument">orders</field>
            <field name="automatic">True</field>
            <field name="export">False</field>
            <field name="importv">True</field>
        </record>

        <record id="meli_action_questions" model="meli.action.list">
            <field name="name">Questions</field>
            <field name="model">meli.questions</field>
            <field name="argument">questions</field>
            <field name="automatic">True</field>
            <field name="export">False</field>
            <field name="importv">False</field>
        </record>

        <record id="meli_action_attributes" model="meli.action.list">
            <field name="name">Attributes</field>
            <field name="model">product.attribute</field>
            <field name="argument">attributes</field>
            <field name="automatic">True</field>
            <field name="export">False</field>
            <field name="importv">False</field>
        </record>
    </data>    
</odoo>
